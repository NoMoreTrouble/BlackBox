[Unit]
Description=BlackBox Monitor Flask Service
After=network.target

[Service]
WorkingDirectory=opt/BlackBox
Environment="FLASK_APP=wsgi.py"
EnvironmentFile=opt/BlackBox/.env
ExecStart=opt/BlackBox/.venv/bin/gunicorn -w 3 -b 0.0.0.0:${FLASK_PORT:-8080} wsgi:app
Restart=always
User=blackbox
Group=blackbox

[Install]
WantedBy=multi-user.target
